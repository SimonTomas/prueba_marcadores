<p id="notice"><%= notice %></p>

<h1 class="text-center my-3">Tipos</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name.capitalize %></td>
        <td><%= link_to 'Mostrar', type %></td>
        <td><%= link_to 'Editar', edit_type_path(type) %></td>
        <td><%= link_to 'Eliminar', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver', root_path, class: 'btn btn-primary' %>
<%= link_to 'Crear nuevo tipo', new_type_path, class: 'btn btn-primary' %>

<br>

<h2 class="text-center my-3 font-weight-bold">Cantidad de Marcadores por Tipo</h2>

<%= pie_chart @query %>

<br>
