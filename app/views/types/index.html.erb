<p id="notice"><%= notice %></p>

<h1>Tipos</h1>




<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name.capitalize %></td>
        <td><%= link_to 'Show', type %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver', root_path %> |
<%= link_to 'Crear nuevo tipo', new_type_path %>

<br>

<h2 style="text-align:center; margin-bottom: 10px">Cantidad de Marcadores por Tipo</h2>

<%= pie_chart @query %>

