<p id="notice"><%= notice %></p>

<h1 class="text-center">Categorias</h1>

<table class="table table-striped my-3">
  <thead class="thead-dark">
    <tr>
      <th>Categoria</th>
      <th>Privacidad</th>
      <th style="text-align: center">Cambiar Privacidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.public ? "Publica" : "Privada" %></td>
        <td style="text-align: center"><%= link_to 'X', public_active_path(category.id) %></td>
        <td><%= link_to 'Mostrar', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver', root_path, class: 'btn btn-primary mt-2' %>
<%= link_to 'Nueva Categoria', new_category_path, class: 'btn btn-primary mt-2' %>