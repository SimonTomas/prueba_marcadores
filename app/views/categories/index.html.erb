<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<%= link_to 'Volver', root_path %> |
<%= link_to 'Nueva Categoria', new_category_path %>

<br>

<table style="margin-top: 10px">
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Privacidad</th>
      <th style="text-align: center">Cambiar Privacidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.public ? "Publica" : "Privada" %></td>
        <td style="text-align: center"><%= link_to 'X', public_active_path(category.id) %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>