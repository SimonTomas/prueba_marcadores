<p id="notice"><%= notice %></p>

<h1>Markers</h1>

<%= render 'form' %>

<table>
  <thead>
    <tr>
      <th>Url address</th>
      <th>Type</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <tr>
        <td><%= marker.url_address %></td>
        <td><%= marker.type.name %></td>
        <td><%= marker.category.name %></td>
        <td><%= link_to 'Show', marker %></td>
        <td><%= link_to 'Edit', edit_marker_path(marker) %></td>
        <td><%= link_to 'Destroy', marker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>